{
  "publisher": "tlshp",
  "name": "colinear",
  "displayName": "colinear",
  "description": "something",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onUri"
  ],
  "contributes": {
    "commands": [
      {
        "command": "colinear.login",
        "title": "Colinear: Log in",
        "icon": "$(key)"
      },
      {
        "command": "colinear.logout",
        "title": "Colinear: Log out",
        "icon": "$(key)"
      },
      {
        "command": "colinear.refresh",
        "title": "Colinear: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "colinear.issue.checkout",
        "title": "Colinear: Checkout issue",
        "icon": "$(git-branch)"
      },
      {
        "command": "colinear.issue.open",
        "title": "Colinear: Open issue in Linear",
        "icon": "$(link-external)"
      },
      {
        "command": "colinear.attachment.open",
        "title": "Colinear: Open attachment in Linear",
        "icon": "$(link-external)"
      },
      {
        "command": "colinear.project.open",
        "title": "Colinear: Open project in Linear",
        "icon": "$(link-external)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "colinearView",
          "title": "Colinear",
          "icon": "assets/colinear.svg"
        }
      ]
    },
    "views": {
      "colinearView": [
        {
          "id": "colinearTree",
          "name": "Colinear"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "colinearTree",
        "contents": "Log in to get started\n[Log in with Linear](command:colinear.login)",
        "when": "linear.hasCheckedSession && !linear.hasSession"
      },
      {
        "view": "colinearTree",
        "contents": "Loading...",
        "when": "linear.hasSession || !linear.hasCheckedSession"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "colinear.login",
          "when": "!linear.hasSession"
        },
        {
          "command": "colinear.logout",
          "when": "linear.hasSession"
        },
        {
          "command": "colinear.refresh",
          "when": "linear.hasSession"
        },
        {
          "command": "colinear.issue.checkout",
          "when": "false"
        },
        {
          "command": "colinear.issue.open",
          "when": "false"
        },
        {
          "command": "colinear.attachment.open",
          "when": "false"
        },
        {
          "command": "colinear.project.open",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "colinear.refresh",
          "when": "view == colinearTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "colinear.issue.checkout",
          "when": "view == colinearTree && viewItem == issue",
          "group": "inline"
        },
        {
          "command": "colinear.issue.open",
          "when": "view == colinearTree && viewItem == issue",
          "group": "inline"
        },
        {
          "command": "colinear.attachment.open",
          "when": "view == colinearTree && viewItem == attachment",
          "group": "inline"
        },
        {
          "command": "colinear.project.open",
          "when": "view == colinearTree && viewItem == project",
          "group": "inline"
        }
      ]
    },
    "colors": [
      {
        "id": "linear.issue.done",
        "description": "Color for Linear issue status: Done",
        "defaults": {
          "dark": "#5e6ad2",
          "light": "#5e6ad2",
          "highContrast": "#5e6ad2",
          "highContrastLight": "#5e6ad2"
        }
      },
      {
        "id": "linear.issue.inProgress",
        "description": "Color for Linear issue status: Done",
        "defaults": {
          "dark": "#f2c94c",
          "light": "#f2c94c",
          "highContrast": "#f2c94c",
          "highContrastLight": "#f2c94c"
        }
      },
      {
        "id": "linear.issue.inReview",
        "description": "Color for Linear issue status: Done",
        "defaults": {
          "dark": "#fc7840",
          "light": "#fc7840",
          "highContrast": "#fc7840",
          "highContrastLight": "#fc7840"
        }
      },
      {
        "id": "linear.issue.readyToMerge",
        "description": "Color for Linear issue status: Done",
        "defaults": {
          "dark": "#0f783c",
          "light": "#0f783c",
          "highContrast": "#0f783c",
          "highContrastLight": "#0f783c"
        }
      },
      {
        "id": "linear.issue.backlog",
        "description": "Color for Linear issue status: Done",
        "defaults": {
          "dark": "#FFFFFF66",
          "light": "#00000066"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "extensionDependencies": [
    "linear.linear-connect",
    "vscode.git"
  ],
  "dependencies": {
    "@linear/sdk": "^13.0.0"
  }
}
